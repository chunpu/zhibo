mixin item(item)
    li
        a.img(href=item.href)
            img(src=item.img)
            div.icon-play
        .info
            a.title(href=item.href)= item.title
            p
                i &#xe601;
                span.anchor= item.anchor
                i &#xe600;
                span.people= item.people
                i &#xe603;
                span.gameType= item.platform + '@' + item.gameType

mixin column(title, items)
    if items
        .column
            h1= title
            ul.items
                each item in items
                    +item(item)

mixin filter(active, all)
    .filters
        ul
            if active
                li.filter
                    a(href='/')= '全部'
            else
                li.filter.active
                    a(href='/')= '全部'
            each item in all
                if active == item
                    li.filter.active
                        a(href='/'+item)= item
                else
                    li.filter
                        a(href='/'+item)= item

mixin websites(active, all, confs)
    .websites
        ul
            if active
                li.website
                    a.label(href='?')= '全部'
            else
                li.website.active
                    a.label(href='?')= '全部'
            each item in all
                if active == item
                    li.website.active
                        a.label(href='?site='+item)= confs[item].name
                        a.link(href=confs[item].link target='_blank')= ' ✈'
                else
                    li.website
                        a.label(href='?site='+item)= confs[item].name
                        a.link(href=confs[item].link target='_blank')= ' ✈'

extend layout
block content
    +filter(locals.type, locals.types)
    br
    hr
    +websites(locals.website, locals.websites, locals.SITES_CONF)
    +column('当前最热', locals.hot)
    +column('英雄联盟', locals['英雄联盟'])
    +column('DOTA2', locals['DOTA2'])
    +column('炉石传说', locals['炉石传说'])
    +column('看球', locals['看球'])
    +column('其他', locals['其他'])
    +column('秀场', locals['秀场'])
end block
